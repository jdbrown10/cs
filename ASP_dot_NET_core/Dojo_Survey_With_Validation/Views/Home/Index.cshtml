@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dojo Survey Index</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
    @model User
    <div class="container">
        <h1>This is my form!</h1>
        <form action="postForm" method="post">
            <div class="form-group">
                <label>Your Name</label>
                <input asp-for="Name" class="form-control">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div>
                <label>Dojo Location</label>
                <select class="form-select" asp-for="DojoLocation">
                    <option value="San Jose">San Jose</option>
                    <option value="Chicago">Chicago</option>
                    <option value="Online">Online</option>
                    <option value="Other">Other</option>
                </select>
                <span class="text-danger" asp-validation-for="DojoLocation"></span>
            </div>
            <div class="form-group">
                <label>Favorite Language</label>
                <select class="form-select" asp-for="FavoriteLanguage">
                    <option value="Python">Python</option>
                    <option value="CSharp">C#</option>
                    <option value="JavaScript">JavaScript</option>
                    <option value="KSP">KSP</option>
                </select>
                <span class="text-danger" asp-validation-for="FavoriteLanguage"></span>
            </div>
            <div class="form-group">
                <label>Comment (optional):</label>
                <input type="textarea" asp-for="Comment">
            </div>
            <span class="text-danger" asp-validation-for="Comment"></span>
            <div class="form-group">
                <br>
                <input type="submit" name="Submit" class="btn btn-primary">
            </div>
        </form>
    </div>
</body>

</html>