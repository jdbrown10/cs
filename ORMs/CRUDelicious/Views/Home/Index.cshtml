@{
    ViewData["Title"] = "Home Page";
}

@model Dish

<div class="text-center">
    <h1>Welcome to CRUDelicious</h1>
    <br>
    <div class="d-flex justify-content-around">
        <div>
            <h4>Check out some recent dishes!</h4>
            <hr>
            <div class="text-left">
                @foreach(Dish d in ViewBag.AllDishes)
                {
                    <p><a href="/show/@d.DishId">@d.Name</a> by @d.Chef</p>
                }
            </div>
        </div>
        <div>
            <a href="/new">Add a Dish</a>
        </div>
    </div>
</div>
