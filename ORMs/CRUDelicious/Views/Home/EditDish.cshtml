@model Dish

<div class="text-center">
    <h1>Update Dish</h1>
    <br>
    <div class="d-flex justify-content-around">
        <div>
            <form action="/dish/update/@Model.DishId" method="post">
                <div class="mb-3">
                    <label for="Name" class="form-label">Name:</label>
                    <input asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Chef" class="form-label">Chef:</label>
                    <input asp-for="Chef">
                    <span asp-validation-for="Chef" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Tastiness" class="form-label">Tastiness:</label>
                    <input asp-for="Tastiness">
                    <span asp-validation-for="Tastiness" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Calories" class="form-label">Calories:</label>
                    <input asp-for="Calories">
                    <span asp-validation-for="Calories" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Description" class="form-label">Description:</label>
                    <input asp-for="Description">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <button type="submit" value="Submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
    <br>
    <a href="/">Home</a>
</div>
