
@model Dish

<div class="container">
    <div class="text-center">
        <h2>Add a Dish</h2>
        <form action="/dish/create" method="post">
        <div class="form-group">
            <label for="Name">Name</label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="danger"></span>
        </div>
        <div class="form-group">
            <label for="NumOfCalories">Number of Calories</label>
            <input asp-for="NumOfCalories" class="form-control">
            <span asp-validation-for="NumOfCalories" class="danger"></span>
        </div>
        <div class="form-group">
            <label for="Description">Description:</label>
            <input asp-for="Description" class="form-control">
            <span asp-validation-for="Description" class="danger"></span>
        </div>
        <div class="form-group">
            <label for="Tastiness">Tastiness:</label>
            <select asp-for="Tastiness" class="form-control">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <span asp-validation-for="Tastiness" class="danger"></span>
        </div>
        <div class="form-group">
            <label for="ChefId">Chef</label>
            <select asp-for="ChefId" class="form-control">
                @foreach (Chef c in ViewBag.AllChefs)
                {
                    <option value="@c.ChefId">@c.FirstName @c.LastName</option>
                }
            </select>
            <span asp-validation-for="ChefId" class="danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary">
        </div>
        </form>
    </div>
</div>
